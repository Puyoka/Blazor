@page "/databinding"

<h3>DataBinding</h3>

<p>
    Data: @data
</p>
<p>
    <input type="text" @bind-value="data" @bind-value:event="oninput"/>
</p>
<p>
    <label>@b</label>
    <input type="checkbox" @bind-value="b" @bind-value:event="oninput"/>
</p>
<p>
    <label>
        @rad
    </label>

    <input type="radio" name="group1" value="1" @onclick="@(()=> rad = 1)" />
    <input type="radio" name="group1" value="2" @onclick="@(()=> rad = 2)"/>    
</p>
<p>
    <label>
        @select
    </label>
    <select @bind="select">
        <option value="sajt">text0</option>
        <option value="kanyu">text1</option>
        <option value="nem">text2</option>
    </select>
</p>
<div class="container">
    <ul>
        @for (int i = 0; i < 5; i++)
        {
            <li>@i</li>
        }
    </ul>
</div>
<div class="container-fluid">
    <table class="table">
        @for (int i = 0; i < 3; i++)
        {
            <tr>
                <td>@i</td>
                <td>@(i+1)</td>
                <td>@(i+2)</td>
            </tr>
        }           
    </table>
</div>

@code {
    string data = "test";
    bool b = default;
    int rad = 0;
    string select;
}
